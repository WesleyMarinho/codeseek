# ===========================================
# CONFIGURAÇÕES DO CODESEEK V1
# ===========================================

# Configurações do Servidor
PORT=3000
NODE_ENV=production

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=codeseek_db
DB_USER=codeseek_user
DB_PASSWORD=sua_senha_muito_forte_aqui

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de Sessão
SESSION_SECRET=sua_chave_secreta_muito_forte_de_pelo_menos_32_caracteres

# Configurações de Segurança
BCRYPT_ROUNDS=12

# Configurações do Chargebee (Opcional)
CHARGEBEE_SITE=seu_site_chargebee
CHARGEBEE_API_KEY=sua_api_key_chargebee

# Configurações da Aplicação
BASE_URL=http://seu-dominio.com
DOMAIN=seu-dominio.com
ADMIN_EMAIL=admin@seu-dominio.com

# Configurações de Email SMTP (Opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# Configurações de SSL/TLS (Produção)
USE_SSL=false
SSL_CERT_PATH=/etc/ssl/certs/seu-dominio.crt
SSL_KEY_PATH=/etc/ssl/private/seu-dominio.key

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/opt/codeseek/uploads

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=/var/log/codeseek/app.log
